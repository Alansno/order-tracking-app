@model Application.City.Dtos.CityRequest

@{
    ViewData["Title"] = "Ciudad";
}

@if (ViewData["Message"] != null)
{
<div class="alert alert-success">
    @ViewData["Message"]
</div>
}

<h1 class="text-center fw-bold">Añadir Ciudad</h1>
<div class="d-flex justify-content-center">
    <form asp-action="Store" class="row g-3 needs-validation w-50">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="mb-3">
            <label asp-for="CityName" class="form-label">Ciudad:</label>
            <input asp-for="CityName" type="text" class="form-control" id="validationCustom01" value="Tuxtla Gutiérrez" required>
            <span asp-validation-for="CityName" class="text-danger"></span>
        </div>

        <div class="text-center">
            <button class="btn btn-primary" type="submit">Guardar</button>
        </div>
    </form>
</div>